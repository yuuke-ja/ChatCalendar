doctype html
html(lang='ja')
  head
    title 新規登録
    link(rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32.png?v=2")
    link(rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16.png?v=2")
    style.
      .wrapper
        {
        margin-top:60px;
        margin-left:auto;
        margin-right:auto;
        width: 300px;
        }
      
      .wrapper input{
        width: 300px;
        height:30px;
        }
      .wrapper button {
        margin-top:20px;
        width:300px;
        height:40px;
        font-size:16px;
        border:none;
        border-radius:5px;
        cursor:pointer;
        background-color: #f6f204a2; 
      }
      a{
        color:black;
        text-decoration:none;
      }
  body
  .wrapper
    h1 認証コードを入力してください
  
    form(method="POST" action="/verify")
      label(for="code") 認証コード
      br
      input(type='text' name="code" required)
     
      button(type="submit") 認証
  script.
    const params = new URLSearchParams(window.location.search);
    const key = params.get('error');
    if (key) {
      const messages = {
        password: 'パスワードが違います',
        notcode: '認証コードが違います',
        timeover: '認証コードの有効期限が切れています'
      };
      alert(messages[key] || 'エラーが発生しました');
    }

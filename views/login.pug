doctype html
html(lang='ja')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title ログイン
    link(rel="icon" type="image/png" href="/images/rogo.png" sizes="180x180")
    style.
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: "Inter", "Noto Sans JP", sans-serif;
      }

      body {
        background-color: #f8f9fa; /* 柔らかいグレー背景 */
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
      img {
        display: block;
        margin: 0 auto 8px;
      }

      h1 {
        font-size: 24px;
        font-weight: 600;
        color: #333;
        margin-bottom: 4px;
      }

      h2 {
        font-size: 18px;
        font-weight: 500;
        color: #555;
        margin-bottom: 24px;
      }


      .login-container {
        background-color: #fff;
        width: 400px;
        padding: 40px 32px;
        border-radius: 10px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        text-align: center;
      }

      h1 {
        font-size: 22px;
        color: #333;
        margin-bottom: 24px;
      }

      label {
        display: block;
        text-align: left;
        font-size: 14px;
        color: #555;
        margin-bottom: 6px;
        margin-top: 12px;
      }

      input {
        width: 100%;
        height: 38px;
        padding: 6px 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
        transition: border-color 0.2s;
      }

      input:focus {
        border-color: #33c595;
        outline: none;
      }

      button {
        margin-top: 20px;
        background-color: #33c595;
        color: white;
        width: 100%;
        height: 42px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.2s;
      }

      button:hover {
        background-color: #28a882;
      }

      .divider {
        border-top: 1px solid #eee;
        margin: 24px 0;
      }

      a {
        color: #33c595;
        text-decoration: none;
        font-size: 14px;
      }

      a:hover {
        text-decoration: underline;
      }

      .footer-link {
        display: block;
        margin-top: 16px;
        color: #666;
        font-size: 13px;
      }

  body
  .login-container
    img(src="/images/rogo.png" alt="ChatCalendarロゴ" style="width:70px;height:70px;margin-bottom:10px;")
    h2 ログイン
    form(method="POST" action="/login")
      label(for="email") メールアドレス
      input(type='email' name="email" required)
      label(for="password") パスワード
      input(type='password' name="password" required)
      button(type="submit") ログイン

    .divider
    a(href="/auth/google") Googleでログイン
    a.footer-link(href="/newuser") アカウントを作成


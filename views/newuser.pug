doctype html
html(lang='ja')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title 新規登録
    link(rel="icon" type="image/png" href="/images/rogo.png" sizes="180x180")
    style.
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: "Inter", "Noto Sans JP", sans-serif;
      }

      body {
        background-color: #f8f9fa;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      .register-container {
        background-color: #fff;
        width: 360px;
        padding: 40px 32px;
        border-radius: 10px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        text-align: center;
      }

      h1 {
        font-size: 22px;
        color: #333;
        margin-bottom: 24px;
      }

      label {
        display: block;
        text-align: left;
        font-size: 14px;
        color: #555;
        margin-bottom: 6px;
        margin-top: 12px;
      }

      input {
        width: 100%;
        height: 38px;
        padding: 6px 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 14px;
      }

      input:focus {
        border-color: #33c595;
        outline: none;
      }

      button {
        margin-top: 20px;
        background-color: #33c595;
        color: white;
        width: 100%;
        height: 42px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }

      .divider {
        border-top: 1px solid #eee;
        margin: 24px 0;
      }

      a {
        color: #33c595;
        text-decoration: none;
        font-size: 14px;
      }

      .footer-link {
        display: block;
        margin-top: 16px;
        color: #666;
        font-size: 13px;
      }

  body
    .register-container
      h1 アカウント作成
      form#signupForm(method="POST" action="/newuser")
        label(for="email") メールアドレス
        input(type='email' name="email" required)
        label(for="username") ユーザー名
        input(type='text' name="username" required maxlength="19")
        label(for="password") パスワード
        input(type="password" name="password" required minlength="4" maxlength="20")
        button(type="submit") 登録
      .divider
      a(href="/auth/google") Googleで登録
      a.footer-link(href="/login") すでにアカウントをお持ちの方はこちら
      script.
        (function () {
          const form = document.getElementById("signupForm");
          if (!form) return;

          form.addEventListener("submit", async (event) => {
            event.preventDefault();

            const formData = new FormData(form);
            const body = new URLSearchParams(formData);

            try {
              const res = await fetch("/newuser", {
                method: "POST",
                headers: { "Content-Type": "application/x-www-form-urlencoded" },
                body,
              });

              if (res.ok) {
                window.location.href = "/verify";
                return;
              }

              const data = await res.json().catch(() => ({}));
              const message =
                (data.errors && data.errors[0] && data.errors[0].msg) ||
                "入力内容に問題があります。再度ご確認ください。";
              alert(message);
            } catch (err) {
              alert("通信エラーが発生しました。時間をおいて再度お試しください。");
            }
          });
        })();

doctype html
html(lang='ja')
  head
    title 新規チャット作成
    style.
      .wrapper
        {
        margin-top:60px;
        margin-left:auto;
        margin-right:auto;
        width: 300px;
        }
        .home{
        position: relative;
        top:0px ;
        left:1100px;
        background-color:#ffffff;
        border: none;
        cursor:pointer;
        }
        .size-6{
          width: 32px;
          height: 32px;
          gap: 20px;
        }
      
      .wrapper input{
        width: 300px;
        height:30px;
        }
      .wrapper button {
        margin-top:20px;
        width:300px;
        height:40px;
        font-size:16px;
        border:none;
        border-radius:5px;
        cursor:pointer;
        background-color: #f6f204a2; 
      }
      a{
        color:black;
        text-decoration:none;
      }
  body
    button.home(onclick="location.href='/home'") 
        svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6")
